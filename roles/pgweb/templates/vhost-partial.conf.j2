        Alias /media {{ service_base_path }}/media
        Alias /favicon.ico {{ service_base_path }}/media/favicon.ico
        <Directory {{ service_base_path }}/media/>
           Require all granted
        </Directory>

        WSGIScriptAlias / {{ web_path }}/wsgi.py
        WSGIDaemonProcess {{ service_vhost_name }} user={{ database_user }} python-path={{ service_base_path }} python-home={{ web_path }}
        WSGIProcessGroup {{ service_vhost_name }}

        <Directory {{ web_path }}/>
          <Files wsgi.py>
            Require all granted
          </Files>
        </Directory>
